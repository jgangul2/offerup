<%= search_form_for @q, :class => collapse_search_form, :id => "sale_items_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :sale_price, "Sale price" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :sale_price_gteq, :class => "form-control", :placeholder => "Sale price greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :sale_price_lteq, :class => "form-control", :placeholder => "Sale price less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :item_description_cont, "Item description contains" %>
    <%= f.text_field :item_description_cont, :class => "form-control", :placeholder => "Item description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :photo_link_cont, "Photo link contains" %>
    <%= f.text_field :photo_link_cont, :class => "form-control", :placeholder => "Photo link contains" %>
  </div>

  <div class="form-group">
    <%= f.label :location_cont, "Location contains" %>
    <%= f.text_field :location_cont, :class => "form-control", :placeholder => "Location contains" %>
  </div>

  <div class="form-group">
    <%= f.label :item_title_cont, "Item title contains" %>
    <%= f.text_field :item_title_cont, :class => "form-control", :placeholder => "Item title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :item_status_cont, "Item status contains" %>
    <%= f.text_field :item_status_cont, :class => "form-control", :placeholder => "Item status contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :category_category_name_cont, "Category category_name contains" %>
    <%= f.text_field :category_category_name_cont, :class => "form-control", :placeholder => "Category category_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :seller_email_cont, "Seller email contains" %>
    <%= f.text_field :seller_email_cont, :class => "form-control", :placeholder => "Seller email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :buyer_email_cont, "Buyer email contains" %>
    <%= f.text_field :buyer_email_cont, :class => "form-control", :placeholder => "Buyer email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/sale_items" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#sale_items_filters">
  Show filters
</a>
