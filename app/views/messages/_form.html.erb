<% was_validated = message.errors.any? %>

<%= form_with(model: message, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for sender_user_id start -->
  <div class="form-group">
    <% sender_user_class = "form-control" %>
    <% sender_user_was_invalid = message.errors.include?(:sender_user) %>

    <% if was_validated %>
      <% if sender_user_was_invalid %>
        <% sender_user_class << " is-invalid" %>
      <% else %>
        <% sender_user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :sender_user_id %>
    <!-- Input for sender_user_id start -->
    <%= f.collection_select :sender_user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for sender_user_id end -->
    <% if sender_user_was_invalid %>
      <% message.errors.full_messages_for(:sender_user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for sender_user_id end -->
  <!-- Label and input for recipient_user_id start -->
  <div class="form-group">
    <% recipient_user_class = "form-control" %>
    <% recipient_user_was_invalid = message.errors.include?(:recipient_user) %>

    <% if was_validated %>
      <% if recipient_user_was_invalid %>
        <% recipient_user_class << " is-invalid" %>
      <% else %>
        <% recipient_user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :recipient_user_id %>
    <!-- Input for recipient_user_id start -->
    <%= f.number_field :recipient_user_id, class: recipient_user_class, placeholder: "Enter recipient user" %>
    <!-- Input for recipient_user_id end -->
    <% if recipient_user_was_invalid %>
      <% message.errors.full_messages_for(:recipient_user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for recipient_user_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
